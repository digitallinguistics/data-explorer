<table class=lexemes-table>

  <thead>
    <tr>
      <th>Language</th>
      <th>Lemma</th>
      <th>Glosses</th>
      <th>Date Created</th>
      <th>Date Modified</th>
    </tr>
  </thead>

  <tbody>
    {{#each lexemes as |lexeme|}}
      <tr>

        {{!-- language --}}
        <td>{{mls lexeme.language.name }}</td>

        {{!-- lemma --}}
        <td class=lemma>{{txn lexeme.lemma }}</td>

        {{!-- glosses --}}
        <td>
          <ol class=numbered>
            {{#each lexeme.senses as |sense|}}
              {{#if sense.gloss}}
                <li>{{ sense.gloss }}</li>
              {{/if}}
            {{/each}}
          </ol>
        </td>

        {{!-- date created --}}
        <td>{{date lexeme.dateCreated }}</td>

        {{!-- date modified --}}
        <td>{{date lexeme.dateModified }}</td>

      </tr>
    {{/each}}
  </tbody>

</table>