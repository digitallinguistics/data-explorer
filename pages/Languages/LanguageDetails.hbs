<section class=language-details>

  <header class=names>

    <svg class=block-icon aria-hidden=true><use href=#text></svg>

    <label class=sci-name-label>Scientific Name</label>
    {{> MultiLangString/MultiLangString name }}

    <label>Autonym</label>
    {{> Transcription/Transcription autonym=autonym lang=iso }}

  </header>

  <div class=metadata>

    <svg class=block-icon aria-hidden=true><use href=#time-past></svg>

    <dl class=def-list>

      <dt>Date Created:</dt>
      <dd>{{date dateCreated }}</dd>

      <dt>Date Modified:</dt>
      <dd>{{date dateModified }}</dd>

    </dl>

  </div>

  <div class=codes>

    <svg class=block-icon aria-hidden=true><use href=#key></svg>

    <dl class=def-list>

      <div>
        <dt>Glottocode:</dt>
        <dd>{{ glottocode }}</dd>
      </div>

      <div>
        <dt>ISO 639-3 Code:</dt>
        <dd>{{ iso }}</dd>
      </div>

      <div>
        <dt>Abbreviation:</dt>
        <dd>{{ abbreviation }}</dd>
      </div>

    </dl>

  </div>

  <article class=description>
    <svg class=block-icon aria-hidden=true><use href=#document></svg>
    <h3>Description</h3>
    <div class=document>
      {{{ description.html }}}
    </div>
  </article>

  <section class=notes>
    <svg class=block-icon aria-hidden=true><use href=#edit></svg>
    <h3>Notes</h3>
    <ul>{ Notes }</ul>
  </section>

</section>