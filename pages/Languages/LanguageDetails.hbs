<section class=language-details>

  <header class=names>

    <label class='label sci-name-label'>Scientific Name</label>
    {{> MultiLangString/MultiLangString name }}

    <label class=label>Autonym</label>
    {{> Transcription/Transcription txn=autonym lang=iso }}

  </header>

  <div class=metadata>

    <dl class=def-list>

      <dt class=label>Date Created:</dt>
      <dd>{{date dateCreated }}</dd>

      <dt class=label>Date Modified:</dt>
      <dd>{{date dateModified }}</dd>

    </dl>

  </div>

  <div class=codes>

    <dl class=def-list>

      <dt class=label>Glottocode:</dt>
      <dd>{{ glottocode }}</dd>

      <dt class=label>ISO 639-3 Code:</dt>
      <dd>{{ iso }}</dd>

      <dt class=label>Abbreviation:</dt>
      <dd>{{ abbreviation }}</dd>

    </dl>

  </div>

  <article class=description>
    <h3 class=label>Description</h3>
    <div class=md>
      {{{ description.html }}}
    </div>
  </article>

  <section class=notes-container>
    {{> Notes/Notes notes }}
  </section>

</section>